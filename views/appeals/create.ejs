<!DOCTYPE html>
<html lang="uz">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Мурожаат Яратиш</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        
        .form-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 1500px;
            height: 600px;
        }
        
        .form-header {
            background-color: #4caf50;
            padding: 15px;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }
        
        .form-header h2 {
            color: #ffffff;
            margin: 0;
            text-align: center;
            font-size: 18px;
        }
        
        .appeal-form {
            padding: 20px;
        }
        
        .form-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: calc(50% - 10px);
            padding: 15px;
            margin: 5px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        
        .form-group textarea {
            width: 100%;
            resize: none;
        }
        
        .form-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 10px;
            border-top: 1px solid #ddd;
        }
        
        .submit-btn {
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }
        
        .cancel-btn {
            background-color: transparent;
            color: #f44336;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 14px;
        }
        
        .submit-btn:hover,
        .cancel-btn:hover {
            opacity: 0.8;
        }
    </style>
</head>

<body>
    <div class="form-container">
        <div class="form-header">
            <h2>Мурожаат яратиш</h2>
        </div>
        <form class="appeal-form" action="/api/save-murojaat" method="POST">
            <input type="hidden" name="status" value="1" />
            <div class="form-group">
                <input type="text" name="full_name" placeholder="ФИО" required />
                <input type="text" name="phone_number" placeholder="+998(XX)-XXX-XX-XX" required />
            </div>
            <div class="form-group">
                <select id="appeal_type" name="appeal_type" required>
            <option value="">Мурожаат тури</option>
            <% appeal_type.forEach(function(appeal_type) { %>
            <option value="<%= appeal_type.id %>">
              <%= appeal_type.name %>
            </option>
            <% }) %>
          </select>
                <select id="category_id" name="category_id" required>
            <option value="">Категориялар</option>
            <% categories.forEach(function(category) { %>
            <option value="<%= category.id %>"><%= category.name %></option>
            <% }) %>
          </select>
                <select id="top_category" name="top_category" required>
            <option value="">Юкори категориялар</option>
            <% top_categories.forEach(function(top_category) { %>
            <option value="<%= top_category.id %>">
              <%= top_category.name %>
            </option>
            <% }) %>
          </select>
                <select id="filials" name="filials" required>
            <option value="">Филиал</option>
            <% filials.forEach(function(filial) { %>
            <option value="<%= filial.id %>"><%= filial.name %></option>
            <% }) %>
          </select>
            </div>
            <div class="form-group">
                <input type="text" name="subject" placeholder="Мавзу" required />
                <input type="date" name="deadline_at" placeholder="deadline" required />
            </div>
            <div class="form-group">
                <textarea name="content" placeholder="Мазмун" required></textarea>
            </div>
            <div class="form-group">
                <input type="text" name="additional_info" placeholder="Қўшимча маълумотлар" />
                <select id="employees" name="emp_id" required>
            <option value="">Employees</option>
          </select>
            </div>
            <div class="form-footer">
                <a type="button" href="/murojaat" class="cancel-btn">Бекор қилиш</a>
                <button type="submit" class="submit-btn">Тасдиқлаш</button>
            </div>
        </form>
    </div>
    <script>
        document
            .getElementById("filials")
            .addEventListener("change", function() {
                const filialId = this.value;

                // Check if a valid filialId is selected
                if (!filialId) {
                    document.getElementById("employees").innerHTML =
                        '<option value="">Employees</option>';
                    return;
                }

                // Perform AJAX request
                fetch(`/api/get-employees?filial_id=${filialId}`)
                    .then((response) => response.json())
                    .then((data) => {
                        console.log("1121", data);
                        let options = '<option value="">Employees</option>';
                        data.forEach((employee) => {
                            options += `<option value="${employee.id}">${employee.name}</option>`;
                        });
                        document.getElementById("employees").innerHTML = options;
                    })
                    .catch((error) => {
                        console.error("Error fetching employees:", error);
                    });
            });
    </script>
</body>

</html>