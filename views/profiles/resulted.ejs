<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Appeals Data Table</title>
    <!-- Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- DataTables Buttons CSS -->
    <link href="https://cdn.datatables.net/buttons/2.3.1/css/buttons.bootstrap5.min.css" rel="stylesheet" />

    <!-- pdfmake -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.70/vfs_fonts.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <style>
        /* Custom styles for better table appearance */
        
        body {
            background-color: #f8f9fa;
        }
        
        .custom-container {
            max-width: 1440px;
        }
        
        .card {
            margin-left: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            padding: 0%;
        }
        
        .card-header {
            background-color: #343a40;
            color: white;
            font-size: 1.25rem;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .card-header a {
            color: white;
            margin-right: 10px;
        }
        
        h3.card-title {
            margin: 0;
            padding-left: 10px;
        }
        /* Container for handling overflow */
        
        .table-container {
            overflow-x: auto;
        }
        /* Style for the table to be smaller */
        
        table {
            width: 100%;
            max-width: 100%;
            border-collapse: collapse;
        }
        
        th,
        td {
            text-align: left;
            padding: 8px;
            font-size: 0.875rem;
        }
        
        th {
            background-color: #343a40;
            color: white;
        }
        
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        
        tr:hover {
            background-color: #e9ecef;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.5rem 1rem;
            margin: 0.25rem;
            border-radius: 4px;
            border: 1px solid #ddd;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background-color: #343a40;
            color: white !important;
        }
        
        .pagination {
            justify-content: center;
            margin-top: 1rem;
        }
        
        .pagination .page-link {
            padding: 0.5rem 1rem;
            margin: 0 0.25rem;
            border-radius: 4px;
            border: 1px solid #ddd;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #343a40;
            color: white;
            border-color: #343a40;
        }
        
        .pagination .page-link:hover {
            background-color: #e9ecef;
        }
    </style>
</head>

<body>
    <div class="mt-4">
        <div class="card">
            <div class="card-header">
                <div style="display: flex">
                    <a href="/api"><i class="fa-solid fa-house"></i></a>
                    <h3 class="card-title">Murojaat natijalari</h3>
                </div>
            </div>
            <div class="card-body table-container">
                <table id="appealsTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <!-- <th>ID</th> -->
                            <th>FIO</th>
                            <!-- <th>Telefon</th> -->
                            <th>Bosh kategoriya</th>
                            <th>Kategoriya</th>
                            <th>Murojaat turi</th>
                            <th>Filial</th>
                            <!-- <th>Mavzu</th> -->
                            <!-- <th>Mazmuni</th> -->
                            <th>Xodim</th>
                            <!-- <th>Qo'shimcha</th> -->
                            <th>Holat</th>
                            <th>Yaratilgan</th>
                            <th>Qabul qilingan</th>
                            <th>Natijalandi</th>
                            <!-- <th>Natija Kommenti</th> -->
                            <!-- <th>Muddati</th> -->
                            <!-- Add a column for the 'Yopish' button -->
                            <th>Amal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% appeals.forEach(function(appeal) { %>
                            <tr>
                                <!-- <td>
                                    <%= appeal.id %>
                                </td> -->
                                <td>
                                    <%= appeal.full_name %>
                                </td>
                                <!-- <td>
                                    <%= appeal.phone_number %>
                                </td> -->
                                <td>
                                    <%= appeal.topCategoryDetails ? appeal.topCategoryDetails.name
                  : 'N/A' %>
                                </td>
                                <td>
                                    <%= appeal.categoryDetails ? appeal.categoryDetails.name :
                  'N/A' %>
                                </td>
                                <td>
                                    <%= appeal.appealTypeDetails ? appeal.appealTypeDetails.name :
                  'N/A' %>
                                </td>
                                <td>
                                    <%= appeal.filialDetails ? appeal.filialDetails.name : 'N/A'
                  %>
                                </td>
                                <!-- <td>
                                    <%= appeal.subject %>
                                </td> -->
                                <!-- <td>
                                    <%= appeal.content %>
                                </td> -->
                                <td>
                                    <%= appeal.employee ? appeal.employee.name : 'Unknown' %>
                                </td>
                                <!-- <td>
                                    <%= appeal.additional_info %>
                                </td> -->
                                <td>
                                    <%= appeal.statuses ? appeal.statuses.name : 'N/A' %>
                                </td>
                                <td>
                                    <%= new Date(appeal.created_at).toLocaleString('en-GB', {year:
                  'numeric', month: '2-digit', day: '2-digit', hour: '2-digit',
                  minute: '2-digit', hour12: false}) %>
                                </td>
                                <td>
                                    <%= new Date(appeal.accepted_at).toLocaleString('en-GB',
                  {year: 'numeric', month: '2-digit', day: '2-digit', hour:
                  '2-digit', minute: '2-digit', hour12: false}) %>
                                </td>
                                <td>
                                    <%= appeal.resulted_at %>
                                </td>
                                <!-- <td>
                                    <%= appeal.resulted_comment %>
                                </td> -->
                                <!-- <td>
                                    <%= new Date(appeal.deadline_at).toLocaleString('en-GB',
                  {year: 'numeric', month: '2-digit', day: '2-digit', hour:
                  '2-digit', minute: '2-digit', hour12: false}) %>
                                </td> -->

                                <!-- New column for the 'Yopish' button -->
                                <td>
                                    <a href="/api/emp-show-single-app/<%= appeal.id %>">
                                        <button type="button" class="btn btn-primary">
                      <i class="fa-regular fa-eye"></i>
                    </button>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <% if (pagination.currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>">Oldingi</a
                >
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">Oldingi</span>
              </li>
              <% } %> <% for (let i = 1; i <= pagination.totalPages; i++) { %>
              <li
                class="page-item <%= pagination.currentPage === i ? 'active' : '' %>"
              >
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                            <% } %>
                                <% if (pagination.currentPage < pagination.totalPages) {
              %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>">Keyingi</a
                >
              </li>
              <% } else { %>
              <li class="page-item disabled">
                <span class="page-link">Keyingi</span>
              </li>
              <% } %>
            </ul>
          </nav>
        </div>
      </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <!-- DataTables Buttons JS -->
    <script src="https://cdn.datatables.net/buttons/2.3.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.1/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.1/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.1/js/buttons.colVis.min.js"></script>

    <!-- Initialize DataTables without copy, csv, print, and pdf buttons -->
    <script>
      $(document).ready(function () {
        if (!$.fn.DataTable.isDataTable("#appealsTable")) {
          $("#appealsTable").DataTable({
            dom: "Bfrtip",
            buttons: [
              // You can add any other buttons if needed
            ],
            paging: false,
            lengthChange: false,
            searching: true,
            ordering: true,
            info: true,
            autoWidth: false,
            responsive: true,
          });
        }
      });
    </script>
  </body>
</html>