    <body>
        <div class="container">
            <h1>Менинг Мурожаатларим</h1>

            <!-- Header Section -->
            <div class="header">
                <a href="/api/dashboard"><i class="fa-solid fa-house"></i></a>
                <div>
                    <span>Мурожаатлар</span>
                    <label class="switch">
                        <input type="checkbox" id="toggleCheckbox" />
                        <span class="slider"></span>
                    </label>
                </div>
            </div>

            <!-- Filter Section -->
            <form action="/api/emp-profile" id="searchByText" method="get">
                <div class="filters">
                    <!-- <a href="/api" class="search-btn">Back</a> -->
                    <select class="filter" name="filial" id="filterByFilials">
                        <option value="">Филиаллар буйича</option>
                        <% filials.forEach(function(filial) { %>
                            <option value="<%= filial.id %>" <%= (filial.id == filterFilial) ? 'selected' : '' %>><%= filial.name %></option>
                        <% }); %>
                    </select>

                    <select class="filter" name="category" id="filterByAppealTypes">
                        <option value="">Категориялар буйича</option>
                        <% categories.forEach(function(category) { %>
                            <option value="<%= category.id %>" <%= (category.id == filterCategory) ? 'selected' : '' %>><%= category.name %></option>
                        <% }); %>
                    </select>

                    <input type="text" class="date-input" placeholder="Search..." name="searchBar" id="searchBar" />
                    <button type="submit" class="search-btn">
                        <i class="fa-solid fa-magnifying-glass"></i> Излаш
                    </button>
                </div>
            </form>

            <!-- Buttons Section
            <div class="buttons">
                <!-- <a href="/api/create-murojaat" class="add-btn">Қўшиш</a> -->
            <!-- <a href="/download" class="export-btn">Юклаш (PDF)</a> -->
        </div>

        <!-- Appeals Section -->

        <div class="container-fluid">
            <% if (appeals && appeals.length > 0) { %>
                <% appeals.forEach(function(appeal) { %>
                    <div class="appeal">
                        <div class="appeal-header">
                            <strong>Filial: <%= appeal.filialDetails ? appeal.filialDetails.name : 'No Filial' %></strong>
                            <div>
                                <a href="/api/edit-emp-single-app/<%= appeal.id %>" class="btn btn-app" style="margin-right: 20px;">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <span>Категория: <%= appeal.categoryDetails ? appeal.categoryDetails.name : 'No Category' %></span>
                            </div>
                        </div>
                        <div class="appeal-content">
                            <p>

                                <%= appeal.content %>
                            </p>
                            <p><strong>Murojaat qiluvchi:</strong>
                                <%= appeal.full_name %>
                            </p>
                            <p><strong>Telefon nomer:</strong>
                                <%= appeal.phone_number %>
                            </p>

                            <p><strong>Qo'shimcha ma'lumotlar:</strong>
                                <%= appeal.additional_info %>
                            </p>
                            <p><strong>Xodim kommenti:</strong>
                                <%= appeal.accepted_comment %>
                            </p>
                        </div>
                        <div class="appeal-footer">
                            <div style="display: flex;justify-content: space-around;">
                                <div class="footer-left">
                                    <strong><i class="fa-solid fa-user" style="margin-right: 10px;"></i> <%= appeal.employee ? appeal.employee.name : 'No Employee' %></strong>
                                </div>
                                <div style="margin-left: 25px;">
                                    <strong>Status: <%= appeal.statuses ? appeal.statuses.name : 'No status' %></strong>
                                </div>
                            </div>
                            <div class="footer-right">
                                <a href="/api/emp-finish-app/<%= appeal.id %>" style="margin-right: 15px;color:#121013"><i class="fa-solid fa-check" style="width: 35px;height:25px"></i></a>
                                <i class="fa-regular fa-calendar" style="margin-right:10px;"></i>
                                <span><%= new Date(appeal.created_at).toLocaleString() %></span>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p>Murojaatlar mavjud emas.</p>
                            <% } %>
        </div>

        </div>

        <script>
            // Toggle visibility of the container-fluid
            document.getElementById("toggleCheckbox").addEventListener("change", function() {
                const container = document.querySelector(".container-fluid");
                container.style.display = this.checked ? "none" : "block";
            });
        </script>
