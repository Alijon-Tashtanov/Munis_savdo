        /* Stylish Gradient Heading */
        
        .custom-heading {
            /* Gradient effect on the text */
            background: linear-gradient(90deg, #ff007a, #ff6f61, #ffc048, #ff007a);
            background-size: 400%;
            margin-left: 25px;
            -webkit-background-clip: text;
            color: transparent;
            /* Shadow for depth */
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2);
            /* Animate gradient for a dynamic effect */
            animation: gradientAnimation 5s ease-in-out infinite;
            /* Add some letter spacing for readability */
            letter-spacing: 0.1em;
            /* Optional: Add text transform */
            text-transform: uppercase;
        }
        /* Gradient animation */
        
        @keyframes gradientAnimation {
            0% {
                background-position: 0%;
            }
            50% {
                background-position: 100%;
            }
            100% {
                background-position: 0%;
            }
        }
        /* Optional: Add a hover effect for interaction */
        
        .custom-heading:hover {
            text-shadow: 3px 3px 12px rgba(0, 0, 0, 0.5);
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out, text-shadow 0.3s ease-in-out;
        }
    </style>
