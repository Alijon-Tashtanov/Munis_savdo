<!DOCTYPE html>
<html lang="uz">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create New Employee</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        
        .form-container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 800px;
            /* padding: 20px; */
        }
        
        .form-header {
            background-color: #4caf50;
            padding: 15px;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            color: #ffffff;
        }
        
        .form-header h2 {
            margin: 0;
            text-align: center;
            font-size: 22px;
            font-weight: 600;
        }
        
        .employee-form {
            padding: 20px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }
        
        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
        }
        
        .form-group input:focus,
        .form-group select:focus {
            border-color: #4caf50;
            outline: none;
            box-shadow: 0 0 4px rgba(76, 175, 80, 0.3);
        }
        
        .form-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 10px;
            border-top: 1px solid #ddd;
        }
        
        .submit-btn {
            background-color: #4caf50;
            color: #fff;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
        }
        
        .cancel-btn {
            background-color: transparent;
            color: #f44336;
            border: none;
            padding: 12px 24px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            text-decoration: none;
        }
        
        .submit-btn:hover,
        .cancel-btn:hover {
            opacity: 0.9;
        }
        /* Two column layout for form inputs */
        
        .form-columns {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        
        .form-group {
            flex: 1 1 calc(50% - 20px);
            /* Adjusts to two columns */
        }
        
        .form-group.full-width {
            flex: 1 1 100%;
            /* For full-width elements */
        }
    </style>
</head>

<body>
    <div class="form-container">
        <div class="form-header">
            <h2>Yangi Xodim yaratish</h2>
        </div>
        <form class="employee-form" action="/api/save-employee" method="POST">
            <div class="form-columns">
                <div class="form-group">
                    <label for="name">FIO</label>
                    <input type="text" autofocus id="name" name="name" placeholder="Full Name" required />
                </div>
                <div class="form-group">
                    <label for="email">Login</label>
                    <input type="email" id="email" name="email" placeholder="alijontashtanov065@gmail.com" required />
                </div>
                <div class="form-group">
                    <label for="password">Parol</label>
                    <input type="text" id="password" name="password" placeholder="password" required />
                </div>
                <div class="form-group">
                    <label for="phone_number">Telefon</label>
                    <input type="text" id="phone_number" name="phone" placeholder="+998(XX)-XXX-XX-XX" required />
                </div>
                <div class="form-group">
                    <label for="filial_id">Filial</label>
                    <select id="filial_id" name="filial_id" required>
              <option value="">Tanlang</option>
              <% filials.forEach(function(filial) { %>
              <option value="<%= filial.id %>"><%= filial.name %></option>
              <% }) %>
            </select>
                </div>
                <div class="form-group">
                    <label for="position_id">Lavozim</label>
                    <select id="position_id" name="position_id">
              <option value="">Tanlang</option>
              <% positions.forEach(function(position) { %>
              <option value="<%= position.id %>"><%= position.title %></option>
              <% }) %>
            </select>
                </div>
                <div class="form-group">
                    <label for="title">Qo'shimcha</label>
                    <input type="text" id="title" name="title" placeholder="qo'shimcha" required />
                </div>
                <div class="form-group">
                    <label for="position_id">Ruxsat</label>
                    <select id="permission_id" name="permission_id">
              <option value="">Tanlang</option>
              <% permissions.forEach(function(permission) { %>
              <option value="<%= permission.id %>">
                <%= permission.name %>
              </option>
              <% }) %>
            </select>
                </div>
            </div>
            <div class="form-footer">
                <a href="/api/employees" class="cancel-btn">Bakor qilish</a>
                <button type="submit" class="submit-btn">Saqlash</button>
            </div>
        </form>
    </div>
</body>

</html>